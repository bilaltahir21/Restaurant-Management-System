@{
    int isAccessAllowed = (int)Session["access"];
    Session["access"] = 0;
}

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="../../theme.css">
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
</head>
<body>
    <div style="background: rgba(19, 35, 47, 0.8); height: 101px;">
        <img  src="../../logo.png" style="float: left; padding-left: 160px; margin-left: 200px;margin-top:30px">
        <label style="color: #ffdab9;  margin: auto;padding-top: 10px; margin-top: 5px; padding-left: 200px; margin-left: 200px; font-size: 40px;">ela Restaurant</label>
        <form action="../../Home/Index" method="post" style="width: 200px; padding-top: 15px;  margin-right: 250px; float: right;">
            <button class="button button-block">Logout</button>
        </form>
    </div>
        @if (isAccessAllowed == 0)
        {
            <div class="form">
                <h1><font face="Comic Sans MS">Welcome..!</font></h1>
                <form action="../../Home/HomePage" method="post">
                    <button class="button button-block">Home Page</button>
                </form>
            </div>
        }
        else if (isAccessAllowed == 1)
        {
            <div class="form">
                <h1>UserName not Registered..!!</h1>
                <form action="../../Home/Index" method="post">
                    <button class="button button-block">Register Again..!</button>
                </form>
            </div>
        }
        else if (isAccessAllowed == 2)
        {
            <div class="form">
                <h1>Password Incorrect..!!</h1>
                <form action="../../Home/Index" method="post">
                    <button class="button button-block">Go Back And Enter Valid Info</button>
                </form>
            </div>
        }
        else if (isAccessAllowed == 3)
        {
            <div class="form">
                <h1><font face="Comic Sans MS">Welcome Sir!</font></h1>
                <form action="../../Home/MgrHomePage" method="post">
                    <button class="button button-block">Go To Home Page</button>
                </form>
            </div>
        }
        else if (isAccessAllowed == -1)
        {
            <div class="form">
                <h1>Some Error Occurred..!!</h1>
                <form action="../../Home/Index" method="post">
                    <button class="button button-block">Go Back And Try Again</button>
                </form>
            </div>
        }
        else
        {
            <div class="form">
               <h1>Something went wrong..!!</h1>
                <form action="../../Home/Index" method="post">
                    <button class="button button-block">Go Back And Try Again</button>
                </form>
            </div>
        }
    </body>
</html>